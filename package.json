{
  "name": "mantine-next",
  "description": "Mantine + Next.js + tRPC template",
  "version": "0.0.1",
  "author": {
    "name": "Ionut-Cristian Florescu",
    "url": "https://github.com/icflorescu",
    "email": "ionut.florescu@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/icflorescu/mantine-next"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "build:standalone": "rm -rf out && next build && mv .next/standalone out && cp -r public out && cp -r .next/static out/.next",
    "check": "prettier --check . && tsc && next lint",
    "fix": "prettier --write . && next lint --fix",
    "db:init": "rm db.sqlite && drizzle-kit push",
    "db:seed": "dotenvx run -- tsx scripts/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev --turbo",
    "preview": "next build && next start",
    "start": "next start",
    "start:standalone": "cp db.sqlite out && node out/server.js",
    "test": "vitest --run"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@libsql/client": "^0.15.9",
    "@mantine/core": "^8.1.1",
    "@mantine/dates": "^8.1.1",
    "@mantine/form": "^8.1.1",
    "@mantine/hooks": "^8.1.1",
    "@mantine/modals": "^8.1.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@tabler/icons-react": "^3.34.0",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@trpc/client": "^11.4.1",
    "@trpc/react-query": "^11.4.1",
    "@trpc/server": "^11.4.1",
    "@trpc/tanstack-react-query": "^11.4.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "iron-session": "^8.0.4",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "valtio": "^2.1.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.2",
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^9.8.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
